{
  "name": "smart-match-web",
  "version": "1.0.0",
  "description": "智能商品匹配系统前端",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "npm run clean && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "clean": "rm -rf .next out dist",
    "deploy:build": "npm run type-check && npm run lint && npm run build:static",
    "deploy:copy": "cp -r out/* /var/www/smart-match/",
    "deploy": "npm run deploy:build && npm run deploy:copy"
  },
  "dependencies": {
    "next": "^14.2.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@nextui-org/react": "^2.4.8",
    "@nextui-org/theme": "^2.2.11",
    "framer-motion": "^11.5.6",
    "next-themes": "^0.3.0",
    "zustand": "^4.5.5",
    "swr": "^2.2.5",
    "@tanstack/react-query": "^5.56.2",
    "@tanstack/react-table": "^8.20.5",
    "recharts": "^2.12.7",
    "react-dropzone": "^14.2.9",
    "react-hook-form": "^7.53.0",
    "@hookform/resolvers": "^3.9.0",
    "zod": "^3.23.8",
    "date-fns": "^3.6.0",
    "lucide-react": "^0.445.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.6.2",
    "tailwindcss": "^3.4.13",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.13",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
